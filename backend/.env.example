# Xenofy Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/xenofy"

# Authentication
JWT_SECRET="your-secure-jwt-secret-here-change-in-production"

# Shopify API Configuration
SHOPIFY_API_VERSION="2023-10"

# Frontend URL (for CORS when deployed)
FRONTEND_URL="http://localhost:3000"

# Server Configuration
PORT=3001
NODE_ENV="development"

# Optional: Admin user details for seeded demo account
DEMO_EMAIL="demo@xenofy.com"
DEMO_PASSWORD="demo123"
